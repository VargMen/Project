<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             x:Class="VargPlot.Ribbon">

  <!-- RESOURCES -->
  <UserControl.Resources>
    <!-- Dark palette -->
    <SolidColorBrush x:Key="RibbonBg"     Color="#222427"/>
    <SolidColorBrush x:Key="RibbonBorder" Color="#2E3136"/>
    <SolidColorBrush x:Key="BtnBg"        Color="#2B2D31"/>
    <SolidColorBrush x:Key="BtnBgHover"   Color="#35383E"/>
    <SolidColorBrush x:Key="BtnBgPressed" Color="#3E4249"/>
    <SolidColorBrush x:Key="BtnBorder"    Color="#3C4046"/>
    <x:Double x:Key="DisabledOpacity">0.35</x:Double>

    <!-- =========================================================
         SVG ICON TEMPLATES (PASTE YOUR FILE PATHS BELOW ONCE)
         ========================================================= -->

    <!-- New -->
    <ControlTemplate x:Key="Icon.New.14">
      <!-- TODO: replace <YourAssembly> and path -->
      <svg:Svg Path="avares://VargPlot/Assets/Icons/bell.svg"
               Width="14" Height="14" Stretch="Uniform"/>
    </ControlTemplate>

    <!-- Settings -->
    <ControlTemplate x:Key="Icon.Settings.14">
      <svg:Svg Path="avares://VargPlot/Assets/Icons/arrow-thick-right.svg"
               Width="14" Height="14" Stretch="Uniform"/>
    </ControlTemplate>

    <!-- Generic placeholder (used for the disabled examples) -->
    <ControlTemplate x:Key="Icon.Placeholder.14">
      <svg:Svg Path="avares://VargPlot/Assets/Icons/arrow-thick-left.svg"
               Width="14" Height="14" Stretch="Uniform"/>
    </ControlTemplate>

    <!-- You can define more on demand:
    <ControlTemplate x:Key="Icon.Save.14">
      <svg:Svg Path="avares://<YourAssembly>/Assets/Icons/save.svg" Width="14" Height="14"/>
    </ControlTemplate>
    <ControlTemplate x:Key="Icon.Export.14">
      <svg:Svg Path="avares://<YourAssembly>/Assets/Icons/export.svg" Width="14" Height="14"/>
    </ControlTemplate>
    -->
  </UserControl.Resources>

  <!-- STYLES -->
  <UserControl.Styles>
    <!-- Round icon button -->
    <Style Selector="Button.circle">
      <Setter Property="Width" Value="28"/>
      <Setter Property="Height" Value="28"/>
      <Setter Property="CornerRadius" Value="14"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Background" Value="{StaticResource BtnBg}"/>
      <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Template">
        <ControlTemplate>
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{TemplateBinding CornerRadius}">
            <ContentPresenter/>
          </Border>
        </ControlTemplate>
      </Setter>
      <Style Selector="^:pointerover">
        <Setter Property="Background" Value="{StaticResource BtnBgHover}"/>
      </Style>
      <Style Selector="^:pressed">
        <Setter Property="Background" Value="{StaticResource BtnBgPressed}"/>
      </Style>
      <Style Selector="^:disabled">
        <Setter Property="Opacity" Value="{StaticResource DisabledOpacity}"/>
      </Style>
    </Style>

    <!-- TabControl chrome (dark) -->
    <Style Selector="TabControl">
      <Setter Property="Background" Value="{StaticResource RibbonBg}"/>
    </Style>
    <Style Selector="TabItem /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    <Style Selector="TabItem:pointerover /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="#2C2F33"/>
    </Style>
    <Style Selector="TabItem:selected /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="#2F3338"/>
      <Setter Property="BorderBrush" Value="{StaticResource RibbonBorder}"/>
    </Style>
    <!-- Tab text colors -->
    <Style Selector="TabItem">
      <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="TabItem HeaderedContentControl#PART_HeaderPresenter TextBlock">
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="TabItem:pointerover">
      <Setter Property="Foreground" Value="#6DB3F2"/>
    </Style>
    <Style Selector="TabItem:pointerover HeaderedContentControl#PART_HeaderPresenter TextBlock">
      <Setter Property="Foreground" Value="#6DB3F2"/>
    </Style>
    <Style Selector="TabItem:selected">
      <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="TabItem:selected HeaderedContentControl#PART_HeaderPresenter TextBlock">
      <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="TabControl ContentPresenter#PART_SelectedContentHost">
      <Setter Property="Background" Value="{StaticResource RibbonBg}"/>
      <Setter Property="BorderBrush" Value="{StaticResource RibbonBorder}"/>
      <Setter Property="BorderThickness" Value="0,1,0,1"/>
      <Setter Property="Padding" Value="8,4"/>
    </Style>
  </UserControl.Styles>

  <!-- BODY -->
  <TabControl TabStripPlacement="Top" MinHeight="48">
    <TabItem Foreground="White" Header="Сервіс" IsSelected="True">
      <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">

          <!-- Uses Icon.New.14 -->
          <Button Classes="circle" ToolTip.Tip="Нове">
            <ContentControl Content="{StaticResource Icon.New.14}"/>
          </Button>

          <!-- Uses Icon.Settings.14 -->
          <Button Classes="circle" ToolTip.Tip="Налаштування">
            <ContentControl Content="{StaticResource Icon.Settings.14}"/>
          </Button>

          <!-- Disabled examples use a single placeholder icon -->
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>

          <!--<Separator Margin="8,0">
            <Border Width="1" Background="{StaticResource RibbonBorder}"/>
          </Separator>-->

          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>

          <!--<Separator Margin="8,0">
            <Border Width="1" Background="{StaticResource RibbonBorder}"/>
          </Separator>-->

          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>

          <!--<Separator Margin="8,0">
            <Border Width="1" Background="{StaticResource RibbonBorder}"/>
          </Separator>-->

          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>
          <Button Classes="circle" IsEnabled="False">
            <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
          </Button>

        </StackPanel>
      </ScrollViewer>
    </TabItem>

    <TabItem Foreground="White" Header="Шаблони">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="circle">
          <ContentControl Content="{StaticResource Icon.New.14}"/>
        </Button>
        <Button Classes="circle" IsEnabled="False">
          <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
        </Button>
      </StackPanel>
    </TabItem>

    <TabItem Foreground="White" Header="Мови">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="circle">
          <ContentControl Content="{StaticResource Icon.Settings.14}"/>
        </Button>
        <Button Classes="circle" IsEnabled="False">
          <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
        </Button>
      </StackPanel>
    </TabItem>

    <TabItem Foreground="White" Header="Допомога">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="circle">
          <ContentControl Content="{StaticResource Icon.Placeholder.14}"/>
        </Button>
      </StackPanel>
    </TabItem>
  </TabControl>
</UserControl>
