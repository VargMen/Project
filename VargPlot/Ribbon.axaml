<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VargPlot.Ribbon">
  <!-- RESOURCES -->
  <UserControl.Resources>
    <!-- Ribbon palette -->
    <SolidColorBrush x:Key="RibbonBg"     Color="#222427"/>
    <SolidColorBrush x:Key="RibbonBorder" Color="#2E3136"/>

    <!-- Button background/border -->
    <SolidColorBrush x:Key="BtnBg"        Color="#2B2D31"/>
    <SolidColorBrush x:Key="BtnBgHover"   Color="#35383E"/>
    <SolidColorBrush x:Key="BtnBgPressed" Color="#3E4249"/>
    <SolidColorBrush x:Key="BtnBorder"    Color="#3C4046"/>

    <!-- Button text colors -->
    <SolidColorBrush x:Key="BtnFg"        Color="#EAECEF"/>
    <SolidColorBrush x:Key="BtnFgHover"   Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BtnFgPressed" Color="#FFFFFF"/>

    <x:Double x:Key="DisabledOpacity">0.35</x:Double>
  </UserControl.Resources>

  <!-- STYLES -->
  <UserControl.Styles>
    <Style Selector="Button.ribbon">
      <Setter Property="Height" Value="32"/>
      <Setter Property="MinWidth" Value="80"/>
      <Setter Property="Padding" Value="12,4"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Background" Value="{StaticResource BtnBg}"/>
      <Setter Property="BorderBrush" Value="{StaticResource BtnBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Foreground" Value="{StaticResource BtnFg}"/>
      <Setter Property="FontSize" Value="12"/>

      <Style Selector="^:pointerover">
        <Setter Property="Background" Value="{StaticResource BtnBgHover}"/>
        <Setter Property="Foreground" Value="{StaticResource BtnFgHover}"/>
      </Style>
      <Style Selector="^:pressed">
        <Setter Property="Background" Value="{StaticResource BtnBgPressed}"/>
        <Setter Property="Foreground" Value="{StaticResource BtnFgPressed}"/>
      </Style>
      <Style Selector="^:disabled">
        <Setter Property="Opacity" Value="{StaticResource DisabledOpacity}"/>
      </Style>
    </Style>

    <!-- Ribbon chrome -->
    <Style Selector="TabControl">
      <Setter Property="Background" Value="{StaticResource RibbonBg}"/>
    </Style>
    <Style Selector="TabItem /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    <Style Selector="TabItem:pointerover /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="#2C2F33"/>
    </Style>
    <Style Selector="TabItem:selected /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="#2F3338"/>
      <Setter Property="BorderBrush" Value="{StaticResource RibbonBorder}"/>
    </Style>
    <Style Selector="TabItem">
      <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="TabItem HeaderedContentControl#PART_HeaderPresenter TextBlock">
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="TabItem:pointerover HeaderedContentControl#PART_HeaderPresenter TextBlock">
      <Setter Property="Foreground" Value="#6DB3F2"/>
    </Style>
    <Style Selector="TabControl ContentPresenter#PART_SelectedContentHost">
      <Setter Property="Background" Value="{StaticResource RibbonBg}"/>
      <Setter Property="BorderBrush" Value="{StaticResource RibbonBorder}"/>
      <Setter Property="BorderThickness" Value="0,1,0,1"/>
      <Setter Property="Padding" Value="8,4"/>
    </Style>
  </UserControl.Styles>

  <!-- BODY -->
  <TabControl TabStripPlacement="Top" MinHeight="48">
    <TabItem Foreground="White" Header="Файл" IsSelected="True">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="ribbon" Content="Симуляція" Click="OnStartSimulationClick"/>
        <Button Classes="ribbon" Content="Завантажити поліграму" Click="OnLoadPolygramClick"/>
        <Button Classes="ribbon" Content="Пауза" Click="OnPauseClick"/>
      </StackPanel>
    </TabItem>

    <TabItem Foreground="White" Header="Сервіс">
      <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
          <Button Classes="ribbon" Content="Нове" Click="OnNewClick"/>
          <Button Classes="ribbon" Content="Налаштування" Click="OnSettingsClick"/>
        </StackPanel>
      </ScrollViewer>
    </TabItem>

    <TabItem Foreground="White" Header="Шаблони">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="ribbon" Content="Створити" Click="OnCreateTemplateClick"/>
        <Button Classes="ribbon" Content="Недоступно" IsEnabled="False"/>
      </StackPanel>
    </TabItem>

    <TabItem Foreground="White" Header="Мови">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="ribbon" Content="Налаштування" Click="OnLanguageSettingsClick"/>
        <Button Classes="ribbon" Content="Недоступно" IsEnabled="False"/>
      </StackPanel>
    </TabItem>

    <TabItem Foreground="White" Header="Допомога">
      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6">
        <Button Classes="ribbon" Content="Довідка" Click="OnHelpClick"/>
      </StackPanel>
    </TabItem>
  </TabControl>
</UserControl>
